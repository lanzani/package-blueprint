name: release

on:
  push:
    tags:
      - "[0-9]+.[0-9]+.[0-9]+"
      - "[0-9]+.[0-9]+.[0-9]+a[0-9]+"
      - "[0-9]+.[0-9]+.[0-9]+b[0-9]+"
      - "[0-9]+.[0-9]+.[0-9]+rc[0-9]+"

jobs:
  details:
    runs-on: ubuntu-latest
    outputs:
      new_version: {% raw %}${{ steps.release.outputs.new_version }}{% endraw %}
      suffix: {% raw %}${{ steps.release.outputs.suffix }}{% endraw %}
      tag_name: {% raw %}${{ steps.release.outputs.tag_name }}{% endraw %}
    steps:
      - uses: actions/checkout@v4

      - name: Extract tag and Details
        id: release
        run: |
          if [ "{% raw %}${{ github.ref_type }}{% endraw %}" = "tag" ]; then
            TAG_NAME=${GITHUB_REF#refs/tags/}
            NEW_VERSION=$(echo $TAG_NAME | awk -F'-' '{print $1}')
            SUFFIX=$(echo $TAG_NAME | grep -oP '[a-z]+[0-9]+' || echo "")
            echo "new_version=$NEW_VERSION" >> "$GITHUB_OUTPUT"
            echo "suffix=$SUFFIX" >> "$GITHUB_OUTPUT"
            echo "tag_name=$TAG_NAME" >> "$GITHUB_OUTPUT"
            echo "Version is $NEW_VERSION"
            echo "Suffix is $SUFFIX"
            echo "Tag name is $TAG_NAME"
          else
            echo "No tag found"
            exit 1
          fi

  setup_and_build:
    name: Install uv and build wheel
    needs: [ details ]
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4
      - uses: ./.github/actions/setup

#      - name: Install the project
#        run: uv sync --all-extras --dev

#      - name: Run tests
#          # For example, using `pytest`
#          run: uv run pytest tests

      - name: Build Wheel
        run: uv build

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: dist
          path: dist/

  github_release:
    name: Create GitHub Release
    needs: [ setup_and_build, details ]
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Download artifacts
        uses: actions/download-artifact@v4
        with:
          name: dist
          path: dist/

      - name: Create GitHub Release
        id: create_release
        env:
          GH_TOKEN: {% raw %}${{ github.token }}{% endraw %}
        run: |
          gh release create {% raw %}${{ needs.details.outputs.tag_name }}{% endraw %} dist/* --title ${{ needs.details.outputs.tag_name }}{% endraw %} --generate-notes

{% if use_private_registry == 'Yes' %}
  private_pypi_publish:
    name: Publish python package to {{ private_registry_name }} registry
    needs: [ setup_and_build, details ]
    runs-on: ubuntu-latest
    permissions:
      contents: write
      id-token: write
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Download artifacts
        uses: actions/download-artifact@v4
        with:
          name: dist
          path: dist/

      - uses: ./.github/actions/setup

      - name: Publish python package
        env:
          UV_PUBLISH_USERNAME: {% raw %}${{ secrets.MAGICPYPI_USERNAME }}{% endraw %}
          UV_PUBLISH_PASSWORD: {% raw %}${{ secrets.MAGICPYPI_PASSWORD }}{% endraw %}
        run: uv publish --index {{ private_registry_name }}
{% endif %}
